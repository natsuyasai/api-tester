{
  "extends": [
    "markuplint:recommended-react"
  ],
  "excludeFiles": [
    "./node_modules/**/*",
    "./src/**/*.stories.tsx",
    "./src/**/*.test.tsx",
    "./src/**/*.spec.tsx",
    "./src/**/*.d.ts",
    "./src/renderer/index.html"
  ],
  "parser": {
    "\\.jsx$": "@markuplint/jsx-parser",
    "\\.tsx$": "@markuplint/jsx-parser"
  },
  "specs": {
    "\\.jsx$": "@markuplint/react-spec",
    "\\.tsx$": "@markuplint/react-spec"
  },
  "rules": {
    "invalid-attr": {
      "options": {
        "allowAttrs": [
          "onDoubleClick",
          "width"
        ]
      }
    },
    "heading-levels": false,
    "use-list": false,
    "permitted-contents": false
  }
}
