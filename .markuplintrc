{
  "extends": [
    "markuplint:recommended-react"
  ],
  "excludeFiles": [
    "./node_modules/**/*",
    "./src/**/*.stories.tsx",
    "./src/**/*.test.tsx",
    "./src/**/*.spec.tsx",
    "./src/**/*.d.ts"
  ],
  "parser": {
    "\\.jsx$": "@markuplint/jsx-parser",
    "\\.tsx$": "@markuplint/jsx-parser"
  },
  "specs": {
    "\\.jsx$": "@markuplint/react-spec",
    "\\.tsx$": "@markuplint/react-spec"
  },
  "rules": {
    "invalid-attr": {
      "options": {
        "allowAttrs": [
          "onDoubleClick"
        ]
      }
    }
  }
}
