{
  "extends": "@electron-toolkit/tsconfig/tsconfig.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/preload/index.d.ts",
    "src/logic/**/*",
    "src/services/apiServiceV2.ts",
    "src/services/fileService.ts",
    "src/services/graphqlService.ts",
    "src/services/httpClient.ts",
    "src/services/httpClientInterface.ts",
    "src/services/requestBuilder.ts",
    "src/services/responseProcessor.ts",
    "src/utils/performanceUtils.ts",
    "src/utils/storageAdapter.ts",
    "src/types",
    "test/logic/**/*"
  ],
  "exclude": [
    "src/renderer/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "types": [
      "electron-vite/node",
      "vitest/globals"
    ],
    "paths": {
      "@renderer/*": [
        "./src/renderer/src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  }
}